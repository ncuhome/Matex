{
  "verbose": true,
  "watch": ["./dev/main.js"],
  "events": {
    "start": "cls || clear"
  },
  "ignore": [
    "asar",
    "src",
    "release/**",
    "scripts/**",
    ".cache",
    "node_modules/**"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js",
  "exec": "electron ./dev/main.js"
}
