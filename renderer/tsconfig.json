{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types" : [],
    "baseUrl": ".",
    "lib": ["ESNext", "dom", "dom.iterable"]
  },
  "include": [
    "./vite.config.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.d.ts",
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}
