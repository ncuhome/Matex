{
  "productName": "Matex",
  "appId": "org.Matex.com",
  "asar": true,
  "files": [
    "release/build",
    "package.json",
    "node_modules"
  ],
  "mac": {
    "icon": "./electron/assets/icon/icon.png",
    "hardenedRuntime": true,
    "extraResources": {
      "from": "./release/build/render",
      "to": "./render"
    }
  },
  "win": {
    "icon": "./electron/assets/icon/icon.ico",
    "extraResources": {
      "from": "./release/build/render",
      "to": "./render"
    },
    "target": [
      "nsis",
      "zip"
    ]
  },
  "nsis": {
    "oneClick": false,
    "guid": "matex",
    "perMachine": true,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "./electron/assets/icon/icon.ico",
    "uninstallerIcon": "./electron/assets/icon/icon.ico",
    "installerHeaderIcon": "./electron/assets/icon/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "matex"
  },
  "directories": {
    "output": "release/app"
  }
}
